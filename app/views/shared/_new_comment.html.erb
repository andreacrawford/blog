<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <div class="form-group">
      <%= f.text_area :body, class: "form-control", placeholder: "Comments" %>
    </div>
    <p>
      <div class="rating"></div>
    </p> 
    <p>
      <%= f.submit "Submit", class: "btn btn-success" %>
    </p>
  <% end %> 
<% end %>