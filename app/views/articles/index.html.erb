<h1>Recipes</h1>

<div class="container-fluid article-list">
  
  <% @articles.each do |article| %>
    <div class="col-xs-12 col-sm-6 col-md-4 article-preview">
      <h4><%= link_to article.title, article %></h4> 
      <%= image_tag(article.image_url, class: "img-responsive small-img") %>
    </div> <!--end article preview-->
  <% end %>
  
    <div class="col-xs-12 is-admin buttons">
      <%= will_paginate @articles %>
      <%= link_to "New Recipe", new_article_path, class: "btn btn-success btn-xs link-buttons" %>
      <% if signed_in? && current_user.admin? %>
    </div>
  <% end %>

  <hr>

</div> <!-- end container-->